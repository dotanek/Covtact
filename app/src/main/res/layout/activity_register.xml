<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">


    <LinearLayout
        android:layout_width="366dp"
        android:layout_height="610dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="275dp"
            android:layout_height="62dp"
            app:srcCompat="@drawable/ic_covtact_logo"
            app:tint="@color/colorGreenDark" />

        <EditText
            android:id="@+id/input_password"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/harabara"
            android:gravity="top|left"
            android:hint="Password"
            android:inputType="textMultiLine"
            android:lines="6"
            android:maxLines="6"
            android:minLines="1"
            android:scrollbars="vertical"
            android:textColor="#406616"
            android:textSize="18sp"
            app:backgroundTint="#6D9B3A" />

        <EditText
            android:id="@+id/input_name"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:ems="10"
            android:fontFamily="@font/harabara"
            android:hint="Name"
            android:inputType="textPersonName"
            android:textColor="#406616"
            android:textSize="20sp"
            app:backgroundTint="#6D9B3A" />

        <EditText
            android:id="@+id/input_email"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:ems="10"
            android:fontFamily="@font/harabara"
            android:hint="Email"
            android:inputType="textPersonName"
            android:textColor="#406616"
            android:textSize="20sp"
            app:backgroundTint="#6D9B3A" />

        <EditText
            android:id="@+id/input_passwordcheck"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/harabara"
            android:gravity="top|left"
            android:hint="Repeat password"
            android:inputType="textMultiLine"
            android:lines="6"
            android:maxLines="6"
            android:minLines="1"
            android:scrollbars="vertical"
            android:textColor="#406616"
            android:textSize="18sp"
            app:backgroundTint="#6D9B3A" />

        <Button
            android:id="@+id/regButton"
            android:layout_width="279dp"
            android:layout_height="57dp"
            android:layout_marginTop="32dp"
            android:backgroundTint="@color/colorGreenLight"
            android:fontFamily="@font/harabara"
            android:text="Register"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/label_register"
            android:layout_width="198dp"
            android:layout_height="70dp"
            android:layout_marginBottom="96dp"
            android:clickable="true"
            android:fontFamily="@font/harabara"
            android:gravity="center"
            android:onClick="toLogin"
            android:text="Already registered? Click here!"
            android:textAlignment="center"
            android:textColor="@color/colorGreenLight"
            android:textSize="24sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>