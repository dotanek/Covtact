<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorRedBG"
    tools:context=".ReportActivity">

    <Button
        android:id="@+id/infoButton"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_marginBottom="50dp"
        android:backgroundTint="@color/colorRedLighter"
        android:fontFamily="@font/harabara"
        android:text="What do I share?"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="304dp"
        android:layout_height="276dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4">

        <TextView
            android:id="@+id/confirmLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:fontFamily="@font/harabara"
            android:gravity="center"
            android:text="Are you sure?"
            android:textAlignment="center"
            android:textColor="@color/colorRedDark"
            android:textSize="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/confirmYesButton"
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:layout_below="@id/mapButton"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/colorRedLight"
            android:fontFamily="@font/harabara"
            android:text="Yes, share it."
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="28sp" />

        <Button
            android:id="@+id/confirmNoButton"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_below="@id/mapButton"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="100dp"
            android:backgroundTint="@color/colorBlueLight"
            android:fontFamily="@font/harabara"
            android:text="No, take me back."
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="22sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>