<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/rounded_edge"
    android:orientation="vertical"
    android:padding="20dp"
    android:layout_marginLeft="50dp"
    android:layout_marginRight="50dp">

    <EditText
        android:maxLines="1"
        android:inputType="text"
        android:id="@+id/nameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:fontFamily="@font/harabara"
        android:gravity="center"
        android:text="Placeholder"
        android:textSize="30dp"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:backgroundTint="@android:color/white"
        app:layout_constraintStart_toStartOf="parent"></EditText>

    <TextView
        android:id="@+id/dateTextView"
        android:lines="1"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/harabara"
        android:text="00/00/0000"
        android:textColor="@android:color/white"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="@id/dateButton"></TextView>

    <EditText
        android:id="@+id/noteEditText"
        android:layout_width="170dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/harabara"
        android:textColor="@android:color/white"
        android:backgroundTint="@android:color/white"
        android:textSize="15dp"
        android:hint="Note (optional)"
        app:layout_constraintStart_toStartOf="@id/dateButton"></EditText>

    <Button
        android:id="@+id/saveButton"
        android:layout_width="200dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:backgroundTint="@color/colorBlueDisabled"
        android:text="Save"
        android:enabled="false"
        android:textAllCaps="false"
        android:textColor="@color/colorDisabledText"
        android:textSize="20dp"
        ></Button>

    <Button
        android:id="@+id/removeButton"
        android:layout_width="200dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:backgroundTint="@color/colorRedLight"
        android:text="Remove"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="20dp"></Button>

</LinearLayout>